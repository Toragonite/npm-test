{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es2017", "dom"],
    "jsx": "react",                 // Add this line to support JSX syntax
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],  // Include .ts and .tsx files
  "exclude": ["node_modules", "dist"]
}